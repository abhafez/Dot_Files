#Press $mod (super) and X to exit - check toolbar for next choices
bindsym $mod+X mode "$mode_system"
bindsym $mod+m mode "$screenlayout"
bindsym control+mod1+Delete mode "$mode_system"

set $mode_system (l) üîê Lock, (r) üîÑ Reboot, (s) üîå Shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym s exec --no-startup-id i3exit shutdown, mode "default"

    #back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $screenlayout [v]üîù[H]üíªüñ•[D]üñ•[L]üíª
mode "$screenlayout" {
    bindsym h exec --no-startup-id ~/.screenlayout/dual.sh, mode "default"
    bindsym d exec --no-startup-id ~/.screenlayout/dell.sh, mode "default"
    bindsym l exec --no-startup-id ~/.screenlayout/laptop.sh, mode "default"
    bindsym v exec --no-startup-id ~/.screenlayout/vertical.sh, mode "default"
    #back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

